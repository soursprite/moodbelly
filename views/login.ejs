<body class="bodyLogin">
    <%- include('./partials/navbarPlain') -%>

    <div class="container">
        <div class="col-lg-6"></div>
        <h1  class="signinLabel whiteText">Sign in</h1>
            <form action="/login" method="POST">
                <input class="form-control mb-4" type="email" name="email" placeholder="Email">
                <input class="form-control mb-4" id="userPass" type="password" name="password" placeholder="Password">
                <input id="loginSubmitButton" class="btn btn-primary" type="submit" value="Submit Log In">
                
            </form>
            <button id="showPasswordButton" class="btn btn-info" onclick="showPassword(), showPassword2()">Show Password</span>
                <!-- <input type="checkbox" onclick="showPassword(), showPassword2()">  -->
            
                <button id="returnToLogin" ><a class="btn btn-info" href="/signup"> Sign-up for an Account</a></button>

    <!-- <br>
